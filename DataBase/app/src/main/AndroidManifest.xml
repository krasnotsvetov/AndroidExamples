<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.ifmo.android_2015.lesson6.worldcam">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:largeHeap="true"
        android:name="ru.ifmo.android_2015.worldcam.DebugApplication">

        <activity android:name="ru.ifmo.android_2015.worldcam.DemoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="ru.ifmo.android_2015.worldcam.DownloadActivity"/>

        <activity android:name="ru.ifmo.android_2015.worldcam.InitCityDBActivity"/>

        <activity android:name="ru.ifmo.android_2015.worldcam.CleanActivity"/>

        <activity android:name="ru.ifmo.android_2015.worldcam.JsonParserActivity"/>

        <activity android:name="ru.ifmo.android_2015.worldcam.SelectCityActivity"/>

    </application>

</manifest>
